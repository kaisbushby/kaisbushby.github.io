{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "removeComments": true,
    "strict": true,
    "watch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "./build/"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "./src/**/*"
  ]
}